{
	"$schema": "http://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"charset": "utf-8",
		"experimentalDecorators": true,
		"module": "es2015",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"removeComments": true,
		"sourceMap": true,
		"target": "es2015"
	},
	"exclude": [
		"node_modules",
		"bower_components",
		"dist"
	],
	"compileOnSave": true
}
